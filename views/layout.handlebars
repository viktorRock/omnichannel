<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>goChannel</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="./assets/images/android-desktop.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="goChannel">
    <link rel="apple-touch-icon-precomposed" href="./assets/images/ios-desktop.png">

    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="./assets/images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-green.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"> </script>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>

    <!-- Arquivos locais -->
    <link rel="shortcut icon" href="./assets/images/favicon.png">
    <link rel="icon" href="./assets/images/favicon.png">
    <link rel="stylesheet" href="./assets/styles/styles.css">
    <!-- <script src="/socket.io.slim.js"></script> -->
    <!-- <script src="/socket.io/socket.io.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.slim.js"></script>
    <script src="./assets/js/script.js"></script>

  </head>
  <body class="mdl-channel mdl-color--grey-200 mdl-color-text--grey-700 mdl-base">

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header  mdl-layout--fixed-tabs">
      <header class="mdl-layout__header mdl-layout__header--scroll mdl-color--primary">
        <div class="mdl-layout--large-screen-only mdl-layout__header-row">
        </div>
        <div class="mdl-layout__header-row">
          <h3 class="mdl-layout--large-screen-only">goChannel</h3>
          <h4 class="mdl-layout--small-screen-only">goChannel</h4>
        </div>
        <div class="mdl-layout--large-screen-only mdl-layout__header-row"></div>
        <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
          <a href="/index" class="mdl-layout__tab is-active">Mensagens</a>
          <a href="features" class="mdl-layout__tab">Servi√ßos</a>
          <a href="#features" class="mdl-layout__tab">Salas</a>
          <a href="#features" class="mdl-layout__tab">Agenda</a>
        </div>
      </header>
      <main class="mdl-layout__content">
        {{{body}}}
          <span id="chtpath" class="visuallyhidden">{{localChatPath}}</span>
        <footer class="mdl-mini-footer">
          <div class="mdl-mini-footer__left-section">
            <div class="mdl-logo">
              goChannels !
            </div>
          </div>
          <div class="mdl-mini-footer__right-section">
            <ul class="mdl-mini-footer__link-list">
              <li><a href="#">Help</a></li>
              <li><a href="#">Privacy and Terms</a></li>
              <li><a href="#">User Agreement</a></li>
            </ul>
          </div>
        </footer>
      </main>
      <div class="chat-kit">
        <div class="mdl-grid mdl-grid--no-spacing chat-window  mdl-cell--4-col-phone mdl-cell--8-col-tablet">
          <div class="chat-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
              <h3 class="mdl-card__title-text">goChannel Chat :)</h3>
            </div>
            <div id="chat-text" class=" mdl-card__supporting-text">
            </div>
            <div class="mdl-card__actions">
              <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">#Compra</button>
              <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">#Cotacao</a>
              <form id="chat-input-form" class="chat-window" action="" >
                <div id="chat-user-field" class="mdl-textfield mdl-js-textfield chat-window" >
                  <input id="chat-user-input" class="mdl-textfield__input" type="text" autocomplete="off" />
                  <label class="mdl-textfield__label" for="chat-input">Text...</label>
                </div>
              </form>
            </div>
          </div>
        </div>
        <button id="chat-kit-button" class=" mdl-button  mdl-js-button mdl-button--raised mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" >
          <i class="material-icons mdl-button--white">chat</i>
          <span class="visuallyhidden">Chat</span>
        </button>
      </div>
      <div id="snackbar" class="mdl-js-snackbar mdl-snackbar">
        <div class="mdl-snackbar__text"></div>
        <button class="mdl-snackbar__action" type="button"></button>
      </div>
    </body>
    </div>
</html>
